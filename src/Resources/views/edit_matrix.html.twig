{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div>{{ message }}</div>
    {% endfor %}
{% endfor %}

{{ form_start(form) }}
<table>
    <tr>
        <th>Entity</th>
        {% for name, exists in header_info %}
            <th>
                {% if not exists %}
                    <div>{{ 'matrix.header.name.unknown'|trans({}, 'BatchEntityImportBundle') }}</div>
                {% endif %}

                {{ name }}
            </th>
        {% endfor %}
    </tr>

    {% for record in form.records %}
        <tr>
            {% for elem in record.children %}
                <td>
                    {{ form_errors(elem) }}
                    {{ form_widget(elem) }}
                </td>
            {% endfor %}
        </tr>
    {% endfor %}
</table>
<button type="submit" id="btn-submit">{{ 'form.button.import'|trans({}, 'BatchEntityImportBundle') }}</button>
{{ form_end(form) }}
